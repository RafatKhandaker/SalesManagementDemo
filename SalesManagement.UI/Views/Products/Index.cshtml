@model IEnumerable<SalesManagement.Data.Product>

@{
    ViewBag.Title = "List of Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/Products/product.css")


<h2>List of Products</h2>
<p>
    @Html.ActionLink("Add A New Product", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>     
            <img src="~/Content/images/phones/@item.Name.Replace(" ", string.Empty)_.jpg" />
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            <a href="/Account/PaymentForm?pID=@(item.Id)">Buy</a>
        </td>
    </tr>
}
</table>
<input type="button" class="btn btn-primary" value="Go to Orders" onclick="location.href='@Url.Action("Index", "Orders")'" />
<input type="button" class="btn btn-primary" value="Go to Inventories" onclick="location.href='@Url.Action("Index", "Inventories")'" />


