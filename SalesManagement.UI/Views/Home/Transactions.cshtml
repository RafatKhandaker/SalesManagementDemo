@using SalesManagement.Models 

@model IEnumerable<SalesManagement.Models.Transaction>

@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transactions</h2>

<table class="table table-striped table-responsive w-auto">
    <thead>
        <tr>
            <th>#</th>
            <th>First</th>
            <th>Last</th>
            <th>Product</th>
            <th>Order Date</th>
            <th>Address</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Account</th>
        </tr>
    </thead>
    <tbody>
        @if (@Model != null)
        {
            foreach (var m in @Model)
            {
                <tr class="table-info">
                    <th scope="row">1</th>
                    <td>@m.CustFName()</td>
                    <td>>@m.CustLName()</td>
                    <td>>@m.Product()</td>
                    <td>@m.OrderDate()</td>
                    <td>@m.DeliveryAddress()</td>
                    <td>@m.AccountType()</td>
                    <td>@m.Quantity()</td>
                    <td>@m.TotalCost()</td>        
                </tr>
            }
        }
    </tbody>
</table>